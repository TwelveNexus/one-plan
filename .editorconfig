# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.java]
indent_style = tab
indent_size = 4

[*.bat]
end_of_line = crlf

[*.md]
trim_trailing_whitespace = false
max_line_length = 80

[*.json]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2

[*.yaml]
indent_style = space
indent_size = 2

[*.xml]
indent_style = space
indent_size = 2

[*.properties]
indent_style = space
indent_size = 2

[*.gradle]
indent_style = tab
indent_size = 4

